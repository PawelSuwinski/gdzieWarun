<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.wp.psuw.gdzieWarun" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GdzieWarun</name>
    <description>
      Przeglądarka tabeli z pokrywą śniegową ze strony hydro.imgw.pl.
    </description>
    <author email="psuw@wp.pl">
        Paweł Suwiński
    </author>
    <icon src="www/img/logo.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="21" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
